    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Launch Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "console": "externalTerminal",
            "env": {
                "FLASK_APP": "app",
                "FLASK_DEBUG": "1",
                "SECRET_KEY": "development"
            },
            "args": [
                "run",
                "--debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
    ]
}